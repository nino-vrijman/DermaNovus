        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Schermen.DermaCamActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_derma_cam"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Schermen.Hoofdscherm"
            android:label="@string/title_activity_hoofdscherm" >
        </activity>
            android:label="@string/title_activity_hoofdscherm" />
        <activity
            android:name=".Schermen.LoginScherm"
            android:label="@string/title_activity_login_scherm" >
            <intent-filter>
                <action android:name="android.intent.action.main" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Schermen.ReceptenScherm"
            android:label="ok" >
        </activity>
        <activity
            android:name=".Schermen.MedicijnScherm"
            android:label="@string/title_activity_medicijn_scherm" >
        </activity>
        <activity
            android:name=".Schermen.DermatoloogScherm"
            android:label="@string/title_activity_dermatoloog_scherm" >
        </activity>
        <activity android:name=".Schermen.PreviewScherm" />
        <activity android:name=".Schermen.BehandelingActivity" />
        <activity android:name=".Schermen.BerichtActivity" />
        <activity android:name=".Schermen.NieuwBerichtActivity" />
        <activity
            android:name=".Schermen.UwGegevensScherm"
            android:label="@string/title_activity_uw_gegevens_scherm" >
