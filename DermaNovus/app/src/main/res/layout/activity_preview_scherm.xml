<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.dermanovus.dermanovus.Schermen.PreviewScherm">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        >
    </include>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_arrow_back_black_18px"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:onClick="btnHome"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivPreview"
            android:layout_gravity="center" />

        <Button
            style="?android:textAppearanceSmall"
            android:id="@+id/btnKeurFotoGoed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="keur goed"
            android:textStyle="bold"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:background="#71b0b1"
            android:textColor="#f5f5f5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:onClick="btnKeurFotoGoed_Click"
            android:nestedScrollingEnabled="true"
            android:layout_weight="0.5"
            android:layout_gravity="bottom" />

        <Button
            style="?android:textAppearanceSmall"
            android:id="@+id/btnKeurFotoAf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="maak nieuwe"
            android:textStyle="bold"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:background="#71b0b1"
            android:textColor="#f5f5f5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:onClick="btnKeurFotoAf_Click"
            android:nestedScrollingEnabled="true"
            android:layout_toRightOf="@+id/btnKeurFotoGoed"
            android:layout_weight="0.5"
            android:layout_gravity="bottom" />

    </LinearLayout>

</FrameLayout>
